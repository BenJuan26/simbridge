{
	"name": "fbw-local-api",
	"version": "0.1.0",
	"description": "The local-api server for FBW addons for various tasks the addons itself can't achieve",
	"author": "",
	"private": false,
	"license": "GNU",
	"bin": {
		"fbw-local-api": "./bin/index.js"
	},
	"scripts": {
		"prepub": "copy package.json dist && copy README.md dist && copy LICENSE dist && copy CODE_OF_CONDUCT.md dist",
		"pub": "cd dist && npm publish",
		"postpub": "cd dist && del package.json && del README.md && del LICENSE && del CODE_OF_CONDUCT.md",
		"prebuild": "rimraf dist",
		"build": "nest build",
		"build:webpack": "webpack --config webpack.config.js",
		"build:exec": "npm run build && pkg --public-packages '*' -t node16-win-x64 --output dist/local-server.exe dist/main.js",
		"build:exec:mac": "npm run build && pkg --public-packages '*' -t node16-macos-x64 --output dist/local-server dist/main.js ",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "webpack --config webpack.config.js --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^8.0.0",
		"@nestjs/core": "^8.0.0",
		"@nestjs/platform-express": "^8.0.0",
		"@nestjs/platform-socket.io": "^8.3.0",
		"@nestjs/swagger": "^5.1.5",
		"@nestjs/websockets": "^8.3.0",
		"@types/pdfjs-dist": "^2.10.378",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.2",
		"mime-types": "^2.1.34",
		"nest-winston": "^1.6.2",
		"pdf-poppler": "^0.2.1",
		"pdfjs-dist": "^2.12.313",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-use-websocket": "^3.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0",
		"socket.io": "^4.4.1",
		"swagger-ui-express": "^4.3.0",
		"winston": "^3.3.3",
		"winston-daily-rotate-file": "^4.5.5",
		"ws": "^8.5.0",
		"xml2js": "^0.4.23"
	},
	"devDependencies": {
		"@flybywiresim/eslint-config": "^0.2.3",
		"@nestjs/cli": "^8.0.0",
		"@nestjs/schematics": "^8.0.0",
		"@nestjs/testing": "^8.0.0",
		"@rollup/plugin-babel": "^5.2.1",
		"@rollup/plugin-commonjs": "^15.1.0",
		"@rollup/plugin-image": "~2.0.6",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^9.0.0",
		"@rollup/plugin-replace": "^2.3.3",
		"@rollup/plugin-typescript": "~8.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "27.0.2",
		"@types/mime-types": "^2.1.1",
		"@types/node": "^16.0.0",
		"@types/supertest": "^2.0.11",
		"@types/ws": "^8.2.2",
		"@types/xml2js": "^0.4.9",
		"@typescript-eslint/parser": "^4.33.0",
		"eslint-plugin-import": "^2.20.1",
		"jest": "^27.2.5",
		"pkg": "^5.5.1",
		"rollup": "^2.67.2",
		"rollup-plugin-copy": "^3.4.0",
		"rollup-plugin-css-only": "^2.1.0",
		"rollup-plugin-livereload": "~2.0.0",
		"rollup-plugin-postcss": "^4.0.0",
		"rollup-plugin-serve": "~1.1.0",
		"rollup-plugin-typescript-paths": "^1.3.0",
		"run-script-webpack-plugin": "^0.0.11",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "^27.0.3",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "^3.10.1",
		"typescript": "^4.3.5",
		"webpack": "^5.65.0",
		"webpack-cli": "^4.9.1",
		"webpack-node-externals": "^3.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"pkg": {
		"targets": [
			"node16-win-x64"
		]
	}
}
